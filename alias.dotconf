# quick diffs between config files
alias d.vimrc='vim -d ~/.vimrc ~/.vim/vimrc'
alias d.emacs='vim -d ~/.emacs ~/.vim/emacs'
alias d.a='vim -d ~/.alias ~/.vim/alias'
alias d.b='vim -d ~/.bashrc ~/.vim/bashrc'
alias d.tmux='vim -d ~/.tmux.conf ~/.vim/tmux.conf'
alias d.screen='vim -d ~/.screenrc ~/.vim/screenrc'
alias d.gc='vim -d ~/.gitconfig ~/.vim/gitconfig'
alias d.awa='vim -c "vsp ~/.vim/alias" ~/.vim/wincmds/alias.cmd'
alias d.awag='vim -c "vsp ~/.vim/alias" -c "vsp ~/.vim/gitconfig_global" ~/.vim/wincmds/alias_global.cmd'
alias d.bwbsb='vim -c "vsp ~/.vim/bashrc" -c "vsp ~/.vim/scripts/.bashrc.sh" ~/.vim/wincmds/bashrc'

