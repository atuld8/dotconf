# core python
alias py="python3.12"
alias python="python3.12"
alias pip="python3.12 -m pip"
alias p="python3.12"
alias ipy="ipython3"

#  Virtual Environment Management
alias venv-create="python3.12 -m venv .venv"
alias venv-activate="source .venv/bin/activate"
alias venv-deactivate="deactivate"
alias venv-remove="rm -rf .venv"
alias venv-reset="rm -rf .venv && python3.12 -m venv .venv"


# Dependency Installation & Updates
alias pipi="python3.12 -m pip install"
alias pipu="python3.12 -m pip install --upgrade"
alias pipul="python3.12 -m pip install --upgrade pip setuptools wheel"
alias pipreq="python3.12 -m pip install -r requirements.txt"
alias freeze="python3.12 -m pip freeze > requirements.txt"


# Aliases Useful for Ollamaâ€‘based RAG Workflows 
alias ol="ollama"
alias ol.pull="ollama pull"
alias ol.serve="ollama serve"
alias ol.logs="tail -f ~/.ollama/logs/server.log"

alias rag="cd ~/workspace/sandbox/git/stash/NB_Repos/cft_utils/rag"   # adjust path
alias rag-ingest="python3.12 ingest.py"
alias rag-ingest-fast="python3.12 ingest.py --changed-files"
alias rag-query="python3.12 query.py"
alias ask="python3.12 query.py"

